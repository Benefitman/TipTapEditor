<div class="wrapper">

  <div>
    <div class="row">
      <button
        type="button" {{action 'makeBold'}}
        class="btn {{if this.isBoldActive 'btn-dark' 'btn-light'}}">
        <b>B</b>
      </button>
      <button
        type="button" {{action 'makeItalic'}}
        class="btn {{if this.isItalicActive 'btn-dark' 'btn-light'}}">
        <i>I</i>
      </button>
      <button
        type="button" {{action 'makeBulletList'}}
        class="btn {{if this.isBulletListActive 'btn-dark' 'btn-light'}}">
        <i>bullet list</i>
      </button>
      <button
        type="button" {{action 'undoLast'}}
        class="btn {{if this.onClick 'btn-dark' 'btn-light'}}">
        <i>Undo</i>
      </button>
      <button
        type="button" {{action 'redoLast'}}
        class="btn {{if this.onClick 'btn-dark' 'btn-light'}}">
        <i>Redo</i>
      </button>
      <button
        type="button" {{action 'download'}}
        class="btn {{if this.onClick 'btn-dark' 'btn-light'}}">
        <i>Download</i>
      </button>
      <button
        type="button" {{action 'removeFormating'}}
        class="btn {{if this.onClick 'btn-dark' 'btn-light'}}">
        <i>Remove All Formating</i>
      </button>
      <button
        type="button" {{action 'deleteText'}}
        class="btn {{if this.onClick 'btn-dark' 'btn-light'}}">
        <i>Clear Content</i>
      </button>
      
          
      
      
    </div>

    <div {{did-insert this.setupTipTap}} class="row tip-tap"></div>
  </div>

</div>

<style>
  .wrapper {
    display: flex;
    justify-content: center;
  }

  .row {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    margin-top: 10px;
    margin-right: -15px;
    margin-left: -15px;
  }

  .btn {
    cursor: pointer;
    display: inline-block;
    font-weight: 400;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 1px solid transparent;
    padding: .375rem .75rem;
    margin-right: 10px;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: .25rem;
    transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
  }

  .btn-dark {
    color: #ffffff;
    background-color: #343a40;
    border-color: #343a40;
  }

  .btn-light {
    color: #212529;
    background-color: #f8f9fa;
    border-color: #f8f9fa;
  }

  .tip-tap {
    border-style: solid;
    border-radius: 5px;
    border-width: 1px;
    background-color: white;
    box-shadow: 3px 3px 5px black;
    padding: 5px;
    height: 600px;
    width: 800px;
  }

  .ProseMirror {
    height: 100%;
    width: 100%;
  }

  .ProseMirror:focus {
    outline: none;
  }
</style>